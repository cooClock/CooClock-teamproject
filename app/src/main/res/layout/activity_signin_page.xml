<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_button_gradient"
    tools:context=".signin_page">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/login_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="242dp"
        android:layout_height="245dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/logo_1" />

    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="300dp"
        android:text="회원가입"
        android:textColor="#0A191E"
        android:textSize="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logindetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cooClock의 다양한 서비스를 경험하세요."
        android:textColor="#8F9698"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/logintext"
        app:layout_constraintTop_toBottomOf="@+id/logintext" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="20.7dp"
        app:layout_constraintStart_toStartOf="@+id/logindetail"
        app:layout_constraintTop_toBottomOf="@+id/logindetail" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="371dp"
        android:layout_height="54.08dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/login_editbox_background"
        android:hint="아이디"
        android:paddingLeft="15dp"
        android:textColorHint="#818080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></EditText>

    <TextView
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20.7dp"
        app:layout_constraintStart_toStartOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />


    <EditText
        android:id="@+id/et_pw"
        android:layout_width="371dp"
        android:layout_height="54.08dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_editbox_background"
        android:hint="비밀번호"
        android:paddingLeft="15dp"
        android:textColorHint="#818080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Password"
        app:layout_constraintTop_toBottomOf="@+id/Password"></EditText>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="371dp"
        android:layout_height="54.08dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button_gradient"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="20.7sp"
        app:layout_constraintEnd_toEndOf="@+id/et_pw"
        app:layout_constraintStart_toStartOf="@+id/et_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_pw" />

</androidx.constraintlayout.widget.ConstraintLayout>