<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/curry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/curry"
                tools:targetApi="s"
                android:background="@drawable/itemrect"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/curry_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:text="카레"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pancakes"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/pancakes"
                android:background="@drawable/itemrect"
                tools:targetApi="s"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/pancakes_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:text="팬케이크"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pizza"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza"
                android:background="@drawable/itemrect"
                tools:targetApi="s"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/pizza_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:text="피자"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dots1"
                android:src="@drawable/dots"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clipToOutline="true"
                android:background="@drawable/itemrect"
                android:scaleType="centerCrop"
                tools:targetApi="s"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/dots2"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:text="더보기"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
