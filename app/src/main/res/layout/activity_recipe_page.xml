<?xml version="1.0" encoding="utf-8"?>
<!-- 모든 아이템? 뷰?를 한번에 표시하고 스크롤이 이중으로 적용되지 않도록 함 -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recipe_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 1. 상단부 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 1-1-1. 레시피 이미지 -->
            <ImageView
                android:id="@+id/recipe_page_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/recipe_list_test1"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:importantForAccessibility="no" />
            <!-- 1-1-3. 유저표시부 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf=""
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.875">
                <!-- 1-1-3-1. 유저 이미지 -->
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="right"
                    android:src="@drawable/user_img2"
                    android:layout_marginBottom="5dp"/>
                <!-- 1-1-3-2. 유저 텍스트 부 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#AAFFFFFF"
                    android:orientation="horizontal">
                    <!-- 1-1-3-2-1. 유저 이름 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/recipe_page_user_d0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle=""/>
                    <!-- 1-1-3-2-2. 나머지 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipe_page_user_d1"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 2. 레시피 제목 부분 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="20dp">
            <!-- 2-1. 레시피 텍스트 부분 -->
            <LinearLayout
                android:id="@+id/recipe_title_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- 2-1-1. 레시피 기준 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <!-- 2-1-1-1. n -->
                    <TextView
                        android:id="@+id/recipe_servings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/recipe_page_title_d0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/pc_yello"
                        android:textSize="18dp" />
                    <!-- 2-1-1-2. 나머지 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:text="@string/recipe_page_title_d1"
                        android:textAlignment="textStart"
                        android:textColor="@color/pc_yello"
                        android:textSize="16dp" />
                </LinearLayout>
                <!-- 2-1-2. 레시피 제목 -->
                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="@string/recipe_page_title_d2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </LinearLayout>
            <!-- 2-2. 좋아요 버튼 -->
            <ImageButton
                android:id="@+id/recipe_add_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/clear"
                android:scaleType="fitCenter"
                android:src="@drawable/heart_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="TODO" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 3. 재료 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <!-- 3-1. "재료" 타이틀 -->
            <TextView
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/recipe_page_ingredient_d0"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/recipe_page_title_border"/>
            <!-- 3-2. 재료 표시 부 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recipe_ingredient_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <!-- 4. 요리 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <!-- 4-1. "요리 하기" 타이틀 -->
            <TextView
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="요리하기"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/recipe_page_title_border"/>
            <!-- 4-2. 요리 진행도 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">
                <!-- 4-2-1. "요리 진행도" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요리 진행도  "
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <!-- 4-2-2. n -->
                <TextView
                    android:id="@+id/recipe_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nn"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textColor="@color/grays"
                    android:textSize="20dp"/>
                <!-- 4-2-3. "%" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textColor="@color/grays"
                    android:textSize="20dp"/>
            </LinearLayout>
            <!-- 4-3. progress bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicatorㅌ
                android:id="@+id/recipe_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:trackCornerRadius="10dp"
                app:trackThickness="10dp"
                app:indicatorColor="@color/pc_yello"
                app:indicatorTrackGapSize="12dp"
                app:trackStopIndicatorSize="12dp"/>
            <!-- 4-4. 타이머 부분 -->
        </LinearLayout>



        <!-- 5. 관련 노하우 부분 -->
        <!-- 5-1. "관련 노하우" 타이틀 -->
        <!-- 5-2. 노하우 리스트 -->


        <!-- 6. 후기 및 별점 부분 -->
        <!-- 6-1. "후기" 타이틀 -->
        <!-- 6-2. 별점 표시부 -->
        <!-- 6-3. 별점 입력 -->
    </LinearLayout>
</androidx.core.widget.NestedScrollView>