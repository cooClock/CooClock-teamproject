<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Your app theme attributes go here -->
    </style>

    <!-- Button style -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <!--   menu icon clicked -->
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/menu_click_color</item>
        <item name="itemTextColor">@drawable/menu_click_color</item>
    </style>
    <style name="custom_rating" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/selector_star</item>
    </style>

    <!--  레시피 작성 페이지 - 카테고리 선택  -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/pc_yello</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStylePositive</item>
    </style>
    <style name="buttonBarButtonStylePositive">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>